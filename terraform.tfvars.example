# Required
# SSH public key for instance access
ssh_public_key = "ssh-rsa AAAA..." # Replace with your SSH public key
# AWS Route53 configuration
aws_root_zone = "example.com"      # Your root domain
aws_zone_id = "Z1234567890ABC"     # Your Route53 zone ID
gcp_project_id = "my-project-id"   # Your GCP project ID

# Network Configuration
admin_ip = "YOUR_IP_ADDRESS/32"    # Replace with your IP address

# GitHub Configuration for OIDC
github_username = "your-username"   # Your GitHub username
github_repo = "terraform-solana"   # This repository name

# Optional Variables
# Optional: GCP configuration
#gcp_region = "us-central1"         # Your preferred GCP region

# Optional: Instance configurations
#instance_type = "c5.2xlarge"       # Default instance type for validators
#salt_master_instance_type = "t3.medium"  # Instance type for Salt master
#test_minion_instance_type = "t3.micro"   # Instance type for test minions

# Optional: Network configuration
#vpc_cidr = "10.0.0.0/16"          # VPC CIDR block
#subnet_cidrs = ["10.0.1.0/24", "10.0.2.0/24"]  # Subnet CIDR blocks

# Optional: Tags
#environment = "production"         # Environment name (e.g., production, staging)
#project = "solana-validator"       # Project name
